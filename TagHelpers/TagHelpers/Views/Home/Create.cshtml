@model TagHelpers.Models.Product

@{
    ViewData["Title"] = "Create";

    List<Product> products = new List<Product>
    {
        new Product{Id = 1,  Name = "Product A", Price = 100 },
        new Product{Id = 2,  Name = "Product B", Price = 200 },
        new Product{Id = 3,  Name = "Product C", Price = 300 },
        new Product{Id = 4,  Name = "Product D", Price = 400 },
        new Product{Id = 5,  Name = "Product E", Price = 500 },
    };

    Product product = new Product { Id = 99, Name = "Panda", Price = 999 };
}

<h1>Create</h1>

<summary>
<timer is-used="false" message ="test message"/>
</summary>
<h4>Product</h4>
<list product-list ="products" some-product ="product"/>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Home" asp-antiforgery="true">            

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" type="text"/>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="CompanyId" class="control-label"></label>
                <select asp-for="CompanyId" class="form-control" asp-items="@ViewBag.Companies"> </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
